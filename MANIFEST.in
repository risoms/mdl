# include
include meta.yaml
include LICENSE
include pytest.ini
include README.md
include requirements.txt
include setup.cfg
include versioneer.py
include imhr/_version.py
# recursive-include
graft imhr/
graft imhr/dist/
graft imhr/eyetracking/
graft imhr/lib/
graft imhr/r33/
graft imhr/tests/
# recursive-exclude of all files within path
prune build
prune conda
prune docs
prune env
prune imhr.egg-info
prune __pycache__
prune imhr/dist/all
prune imhr/dist/roi/all
prune imhr/dist/experiments
prune imhr/dist/output
